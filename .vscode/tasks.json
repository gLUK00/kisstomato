{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create-venv",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                "venv"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "install-dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": [
                "install",
                "-r",
                "${workspaceFolder}/app/requirements.txt"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": ["create-venv"]
        }
    ]
}