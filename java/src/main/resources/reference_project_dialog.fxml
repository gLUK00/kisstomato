<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kisstomato.ReferenceProjectDialogController">
   <children>
      <Label text="Référencer un projet existant">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Chemin du fichier de configuration du projet :" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="txtFilePath" prefWidth="400.0" promptText="/home/user/mon_projet/kisstomato.json" />
                  <Button fx:id="btnBrowse" mnemonicParsing="false" onAction="#browseForFile" text="Parcourir" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Label fx:id="lblError" text="" textFill="red" visible="false" wrapText="true" />
      
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="btnValidate" mnemonicParsing="false" onAction="#validateProject" style="-fx-background-color: #198754; -fx-text-fill: white;" text="Valider" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancelDialog" text="Annuler" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
