<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kisstomato.MainController">
   <children>
      <Label text="KissTomato - Gestionnaire de Projets">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Double-cliquez sur un projet pour l'ouvrir" />
            <Button fx:id="btnReload" mnemonicParsing="false" onAction="#reloadProjects" text="Recharger" />
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Votre projet n'est pas présent ?" />
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnReferenceProject" mnemonicParsing="false" onAction="#referenceExistingProject" style="-fx-background-color: #0b5ed7; -fx-text-fill: white;" text="Référencer un projet existant" />
                  <Button fx:id="btnCreateProject" mnemonicParsing="false" onAction="#createNewProject" style="-fx-background-color: #198754; -fx-text-fill: white;" text="Créer un nouveau projet" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="tableProjects" prefHeight="400.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="colNom" prefWidth="200.0" text="Nom" />
          <TableColumn fx:id="colDescription" prefWidth="300.0" text="Description" />
            <TableColumn fx:id="colTypePlugin" prefWidth="200.0" text="Type de Plugin" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
