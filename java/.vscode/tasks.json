{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-jar",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "package"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$maven"]
        },
        {
            "label": "run-app",
            "type": "shell",
            "command": "mvn",
            "args": ["javafx:run"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$maven"]
        }
    ]
}
